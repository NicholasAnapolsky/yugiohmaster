@model IEnumerable<MileStone2A.Models.BikeListModel>

@{
    ViewBag.Title = "Road Bikes";
}

<h2>Road Bikes</h2>

@foreach (var item in Model)
{
    @Html.ActionLink(@item.ProductModel, "Details", new { id = @item.ProductModelID }, new { @class = "list-brand" })
    <br>
    <p>@item.Description</p>
    <br>
}
