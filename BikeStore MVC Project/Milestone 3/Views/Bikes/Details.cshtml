@model IEnumerable<MileStone2A.Models.Product>

@{
    ViewBag.Title = "Bike Models";
}

<h2>Bike Models</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "ProductDetails", new { id = item.ProductID }, new { @class = "otherlink" })              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <p class="button">
                    @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = item.ProductID }, "")
                </p>    
            </td>
        </tr>
    }

</table>
