@model IEnumerable<MileStone2A.Models.ProductCategory>

@{
    ViewBag.Title = "Clothing";
}

<h2>Clothing</h2>

<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href=@Href("~/Gear/Details", @item.ProductCategoryID)>@item.Name</a>
            </td>
        </tr>
    }

</table>
